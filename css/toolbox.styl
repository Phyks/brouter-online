$toolbox-width = 346px;
$primary-color = #7cc72c;
$secondary-color = #4a90e2;
$border-color = #e4e4e4;
$bg-color = #f5f5f5;


.toolbox {
  margin: 20px !important;
  width: $toolbox-width;
  font-size: 15px;

  .waypoints {
    width: 100%;
    background-color: white;
    border-radius: 3px 0 0 3px;
    position: relative;
    padding: 6px 28px 5px 12px;
    box-shadow: 2px 2px 2px rgba($text-color, .2);
  }

  .waypoint {
    position: relative;
    input { border: 0; width: 100%; padding-left 25px; line-height: 34px; outline: 0; border-bottom: 1px solid $border-color; }
    label { display: inline-block; absolute: left 1px top 9px; size: 18px; background-color: $primary-color; font-size: 11px; text-align: center; border-radius: 50%; color: white; }
  }
  .waypoint:last-child {
    input { border-bottom-color: transparent; }
    label { background-color: $secondary-color; }
  }
  .waypoint {
    input:focus { border-bottom: 1px solid $secondary-color; }
  }

  .search-button {
    absolute: right -55px top 0 bottom 0;
    width: 55px;
    background-color: $primary-color;
    border: 0;
    border-bottom: 1px solid darken($primary-color, 5%);
    border-radius: 0 3px 3px 0;
    box-shadow: 2px 2px 2px rgba($text-color, .2);
    outline: 0 none;

    &:hover { background-color: darken(@background-color, 8%); }
  }

  .swap { absolute: right 10px top 50%; margin-top: -11px; }

  .profile {
    background-color: $bg-color;
    width: 100%;
    padding: 15px 15px 12px;
    margin-top: -3px;
    border-radius: 0 0 3px 3px;
    z-index: -1;

    box-shadow: 2px 2px 2px rgba($text-color, .2);
  }
  .profile-icon { margin-top: 7px; margin-right: 18px; }

  .field {
    font-size: 14px;
    label { font-size: 11px; color: #b2b1b1; display: block; }
  }
}


.typeahead-dropdown-menu {
  width: 100%;
  background-color: white;
  box-shadow: 2px 2px 2px rgba(black, .2);
  position: absolute;
  margin-top: -2px;
  z-index: 100;

  .item { padding: 5px 10px; cursor: pointer; }
  .item { border-top: 1px solid #eee; }
  .item.active { background-color: lighten(saturate($secondary-color, 20%), 90%); }
  .item small { color: $muted-text-color; }
}


.card {
  width: 100%;
  background-color: white;
  border-radius: 3px 0 0 3px;
  position: relative;
  padding: 6px 12px 5px;
  box-shadow: 2px 2px 2px rgba($text-color, .2);
  margin-top: 11px;
}
